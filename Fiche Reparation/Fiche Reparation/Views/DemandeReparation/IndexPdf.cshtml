@model Fiche_Reparation.Models.DemandeReparation
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>Fiche de Réparation #@Model.Id</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
        }

            .header h1 {
                color: #007bff;
                margin: 0;
            }

        .info-section {
            margin-bottom: 30px;
        }

        .info-row {
            display: flex;
            margin-bottom: 8px;
            padding-bottom: 8px;
            border-bottom: 1px solid #eee;
        }

        .info-label {
            font-weight: bold;
            width: 150px;
            color: #555;
        }

        .info-value {
            flex: 1;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            font-size: 0.9em;
            color: #666;
            border-top: 1px solid #eee;
            padding-top: 10px;
        }

        .status-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 0.9em;
            font-weight: bold;
        }

        .status-arrive {
            background-color: #6c757d;
            color: white;
        }

        .status-encours {
            background-color: #ffc107;
            color: black;
        }

        .status-termine {
            background-color: #28a745;
            color: white;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Fiche de Réparation #@Model.Id</h1>
        <p>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
    </div>

    <div class="info-section">
        <h2>Informations client</h2>
        <div class="info-row">
            <div class="info-label">Client:</div>
            <div class="info-value">@(Model.Client?.Nom ?? "Non spécifié")</div>
        </div>
    </div>

    <div class="info-section">
        <h2>Détails de la réparation</h2>
        <div class="info-row">
            <div class="info-label">Date de dépôt:</div>
            <div class="info-value">@Model.DateDepotAppareil.ToString("dd/MM/yyyy")</div>
        </div>
        <div class="info-row">
            <div class="info-label">Appareil:</div>
            <div class="info-value">@Model.Appareil</div>
        </div>
        <div class="info-row">
            <div class="info-label">État:</div>
            <div class="info-value">
                <span class="status-badge
                    @(Model.Etat == "Terminé" ? "status-termine" :
                      Model.Etat == "En cours" ? "status-encours" : "status-arrive")">
                    @Model.Etat
                </span>
            </div>
        </div>
        <div class="info-row">
            <div class="info-label">Symptômes:</div>
            <div class="info-value">@Model.SymptomesPanne</div>
        </div>
    </div>

    <div class="footer">
        <p>Merci pour votre confiance - Service après-vente</p>
        <p>Tél: 01 23 45 67 89 - Email: contact@reparation.com</p>
    </div>
</body>
</html>