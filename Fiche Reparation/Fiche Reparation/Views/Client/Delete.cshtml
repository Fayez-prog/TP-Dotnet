@model Fiche_Reparation.Models.Client
@{
    ViewData["Title"] = "Supprimer le Client";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle"></i> Attention!
                </h4>
                <p>Êtes-vous sûr de vouloir supprimer définitivement ce client ? Cette action est irréversible.</p>
                <hr>
                <p class="mb-0">Toutes les fiches de réparation associées à ce client seront également affectées.</p>
            </div>

            <div class="mb-4 p-3 bg-light rounded">
                <h5 class="mb-3">Informations du client</h5>
                <dl class="row">
                    <dt class="col-sm-3">Nom :</dt>
                    <dd class="col-sm-9">@Model.Nom</dd>

                    <dt class="col-sm-3">Adresse :</dt>
                    <dd class="col-sm-9">@Model.Adresse</dd>

                    <dt class="col-sm-3">Téléphone :</dt>
                    <dd class="col-sm-9">@Model.NumTel</dd>

                    <dt class="col-sm-3">Email :</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                </dl>
            </div>

            <form id="deleteForm" method="post" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-danger me-md-2">
                        <i class="fas fa-trash-alt"></i> Confirmer la suppression
                    </button>
                    <a asp-action="Liste" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
