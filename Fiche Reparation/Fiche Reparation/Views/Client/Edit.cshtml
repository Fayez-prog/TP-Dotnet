@model Fiche_Reparation.Models.Client
@{
    ViewData["Title"] = "Modifier le Client";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Nom" class="form-label fw-bold"></label>
                            <input asp-for="Nom" class="form-control" required />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NumTel" class="form-label fw-bold"></label>
                            <input asp-for="NumTel" class="form-control" required pattern="[0-9]{10}" />
                            <span asp-validation-for="NumTel" class="text-danger"></span>
                            <small class="form-text text-muted">Format: 10 chiffres sans espaces</small>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Adresse" class="form-label fw-bold"></label>
                    <input asp-for="Adresse" class="form-control" required />
                    <span asp-validation-for="Adresse" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" required type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-success me-md-2">
                        <i class="fas fa-check"></i> Enregistrer
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-times"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Activation de la validation côté client
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
